{
  "name": "svelteviews",
  "displayName": "svelteviews",
  "description": "vscode with svelte webviews",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:editorCustoms.customData",
    "onCommand:svelteviews.showWebview",
    "onView:svelte-sidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "editorCustoms.customData",
        "displayName": "Custom Data",
        "selector": [
          {
            "filenamePattern": "*.{customData}"
          }
        ]
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "svelte-sidebar-view",
          "title": "Svelte Sidebar Panel Webview",
          "icon": "media/preview.svg"
        }
      ]
    },
    "views": {
      "svelte-sidebar-view": [
        {
          "type": "webview",
          "id": "svelte-sidebar",
          "name": "svelte-sidebar-view",
          "icon": "media/preview.svg",
          "contextualTitle": "svelte-sidebar"
        }
      ]
    },
    "commands": [
      {
        "command": "svelteviews.showWebview",
        "title": "Show Webview"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build-webviews": "npm run build --prefix ./webviews/",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "bulma": "^0.9.3"
  }
}
